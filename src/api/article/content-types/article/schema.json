{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "maxLength": 100,
      "minLength": 10,
      "required": true
    },
    "body": {
      "type": "blocks",
      "required": true
    },
    "claps": {
      "type": "integer",
      "required": true,
      "default": 0,
      "min": 0
    },
    "views": {
      "type": "integer",
      "required": true,
      "default": 0,
      "min": 0
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "World",
        "Politics",
        "Business",
        "Opinion",
        "Entertainment",
        "Travel",
        "Sports",
        "Health"
      ],
      "required": true
    },
    "cover": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    }
  }
}
